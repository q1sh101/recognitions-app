<%= turbo_frame_tag "login_form" do %>
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-12 col-sm-10 col-md-6 col-lg-5 col-xl-4">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h4 class="h4 fw-semibold mb-2">Welcome Back</h4>
                        <p class="text-muted mb-0">Sign in to your account</p>
                    </div>

                    <!-- Login Form -->
                    <%= form_with url: login_path, method: :post, data: { turbo_frame: "_top" } do %>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <%= text_field_tag :email, 
                    params[:email], 
                    class: "form-control #{'is-invalid' if flash[:email_error]}", 
                    id: "email",
                    placeholder: "your@email.com" %>

                        <% if flash[:email_error] %>
                        <div class="invalid-feedback d-block">
                            <%= flash[:email_error] %>
                        </div>
                        <% end %>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <%= password_field_tag :password, 
                    nil, 
                    class: "form-control #{'is-invalid' if flash[:password_error]}", 
                    id: "password",
                    placeholder: "Enter your password" %>

                        <% if flash[:password_error] %>
                        <div class="invalid-feedback d-block">
                            <%= flash[:password_error] %>
                        </div>
                        <% end %>
                    </div>

                    <!-- General Error Message -->
                    <% if flash[:alert] && !flash[:email_error] && !flash[:password_error] %>
                    <div class="alert alert-danger py-2 small mb-3" role="alert">
                        <%= flash[:alert] %>
                    </div>
                    <% end %>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <%= submit_tag "Sign In", class: "btn btn-primary" %>
                    </div>

                    <% end %>

                    <!-- Footer Help Text -->
                    <div class="mt-4 text-center">
                        <p class="text-muted small mb-0">
                            Test credentials: <br>
                            <code class="text-muted">alice@example.com</code> / <code class="text-muted">password</code>
                        </p>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<% end %>